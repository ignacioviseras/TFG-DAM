<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".EventsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/allEventsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_menu"/> <!-- AÃ±ade la propiedad layout_above para posicionar el ListView arriba del fragmento -->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_menu"
            android:name="com.edix.grupo02_codigo_control_de_acceso.MenuFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout="@layout/fragment_menu" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>